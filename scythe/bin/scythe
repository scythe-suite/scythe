#!/bin/bash

echo1() { echo -e "\033[34m*** $@...\033[0m"; }
echo2() { echo -e "\033[31m** $@...\033[0m"; }
echo3() { echo -e "\033[32m* $@...\033[0m"; }

if [ -z $SCYTHE_HOME ]; then
	echo "scythe: please set the required environment variables sourcing setpath.sh" 2>&1
	exit 1
fi

if [ -z "$1" ]; then
	echo "scythe: available commands: $(ls -1 "$SCYTHE_HOME/bin/scythe-"* | sed 's/.*\/bin\/scythe-\(.*\)/\1/g' | paste -s -d' ' -)" 2>&1
	exit 1
fi
SCYTHE_CMD="$SCYTHE_HOME/bin/scythe-$1"
if [ ! -r "$SCYTHE_CMD" ]; then
	echo "scythe: command '$1' not found!" >&2
	exit 1
fi
if [ "$1" == "init" ]; then
	source "$SCYTHE_CMD"
	exit 0
fi
shift

if [ -z "$1" ]; then
	echo "scythe: please specify the conf!" >&2
	exit 1
fi
SCYTHE_CONF="$1"
shift

source "$SCYTHE_HOME/../confs/confs.sh"
if [ ! -r "$EXERCISES" ]; then
	echo "scythe: exercises list '$EXERCISES' not readable!" 2>&1
	exit 1
fi

source "$SCYTHE_CMD" "$@"
