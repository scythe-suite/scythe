echo1 "Versions of installed tools"

echo2 "From GitHub"

echo "scythe: $(suite_latest_version scythe)"
echo "sim-fun-i: $(suite_latest_version sim-fun-i)"
echo "tristo-mietitore: $(suite_latest_version tristo-mietitore)"
echo "scythe-viewer: $(suite_latest_version scythe-viewer)"
echo "md2html: $(suite_latest_version md2html)"

echo2 "As reported by tools"

echo3 scythe
echo "scythe: version: $SCYTHE_VERSION" >&2

echo3 sim-fun-i
sf version

echo3 tristo-mietitore
tm version

if [ ! -z "$SCYTHE_USE_SANDBOX" ]; then
    echo2 "As reported by tools in the Docker image"

    echo3 sim-fun-i
    docker run --rm -it scythe/tmtest version

    echo3 tristo-mietitore
    docker run --rm -it --entrypoint /bin/tm scythe/tmtest version
fi
